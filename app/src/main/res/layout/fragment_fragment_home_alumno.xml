<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="applicate.com.sigma.applicate.FragmentHomeAlumno">

    <LinearLayout
        android:id="@+id/header"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#97C1CF"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:contentDescription="foto"
            android:src="@drawable/java" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:fontFamily=""
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/assignatura"
            android:textSize="35sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/aula"
            android:textSize="40sp" />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginRight="20dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:contentDescription="check_assist"
        android:src="@drawable/position" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/botonNotificaciones"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#97C1CF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            >

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/new24128"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:text="@string/notificar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/botonBuscar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:background="#97C1CF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/search128"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:text="@string/buscar"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/botonEstadisticas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:background="#97C1CF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:layout_marginLeft="30dp"
                android:gravity="left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/statistic128"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:text="@string/estadisticas"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/botonLogout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:background="#97C1CF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>x

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="30dp"
                android:text="Log-Out"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
